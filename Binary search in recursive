class Solution {
private:
    int findEle(vector<int> &arr,int low ,int high,int k){
        if(low > high) return -1;
        int mid = low + (high-low)/2;
        if(arr[mid] == k) return mid;
        else if(k > arr[mid]) return findEle(arr,mid+1,high,k);
        return findEle(arr,low,mid-1,k);
    }
public:
    int search(vector<int>& arr, int k) {
        int low  = 0, high = arr.size()-1;
        return findEle(arr,low,high,k);
    }
};
// binary search in the recursive approach 
