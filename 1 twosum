class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
        int n = nums.size();
        map<int,int> mpp;
        vector<int> res;
        for(int i = 0;i<n;i++){
            int a = nums[i];
            int more = target - a;
            if(mpp.find(more) != mpp.end()){
                res.push_back(i);
                res.push_back(mpp[more]);
                break;
            }
            mpp[a] = i;
        }
        return res;
    }
};
